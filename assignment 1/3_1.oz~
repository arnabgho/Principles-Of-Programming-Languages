local Neg Mult Fact in
fun {Neg Pow}
   if Pow==1 then 1
   else
      ~1*{Neg Pow-1}
   end
end
fun {Mult X Pow}
   if Pow==0 then 1
   else
      X*{Mult Pow-1}
   end
end
fun {Fact Pow}
   if Pow == 1 then 1
   else
      Pow*{Fact Pow-1}
   end
end

fun lazy {Sin X Ind}
   (({Neg Ind}*{Mult X Ind*2-1}) div {fact 2*Ind-1}) %+ {Sin X Ind+1}
end
end